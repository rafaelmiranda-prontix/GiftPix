# Server Configuration
PORT=3000
NODE_ENV=development

# Payment Provider (asaas or pagbank)
PAYMENT_PROVIDER=asaas

# URL pública do frontend (para geração de links/QR no backend)
FRONTEND_BASE_URL=http://localhost:3000

# Se true, exige pagamento confirmado para resgatar gifts
# Em dev pode ficar false para não travar o fluxo
REQUIRE_PAYMENT_CONFIRMATION=false

# Asaas API Configuration
ASAAS_API_URL=https://sandbox.asaas.com/api
ASAAS_API_KEY=your_asaas_api_key_here

# PagBank API Configuration
PAGBANK_API_URL=https://sandbox.api.pagseguro.com
PAGBANK_API_TOKEN=your_api_token_here
PAGBANK_EMAIL=your_pagseguro_email@example.com

# Security
API_SECRET_KEY=your_secret_key_here_change_in_production

# Transaction Limits
MIN_PIX_VALUE=1.00
MAX_PIX_VALUE=10000.00

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
# CORS (produção: obrigatório se origem externa)
# ALLOWED_ORIGINS=https://app.seudominio.com,https://www.seudominio.com

# Notificações (MVP: e-mail do presenteador)
NOTIFICATION_DEFAULT_RECIPIENT=sender@example.com
NOTIFICATION_FROM_EMAIL=notifications@giftpix.com

# Database (Supabase por padrão)
DB_PROVIDER=supabase
SUPABASE_DATABASE_URL=postgresql://postgres:password@aws-xxx.supabase.co:5432/postgres?pgbouncer=true&connection_limit=1&pool_timeout=10&sslmode=require
SUPABASE_DIRECT_URL=postgresql://postgres:password@aws-xxx.supabase.co:5432/postgres?sslmode=require

# Alternativa Postgres standalone (se DB_PROVIDER=postgres)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=giftpix
